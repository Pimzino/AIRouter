{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "steps": {
    "install": {
      "inputs": [
        { "local": true, "include": ["."] }
      ],
      "commands": ["npm install --legacy-peer-deps"]
    },
    "build": {
      "inputs": [
        { "step": "install" }
      ],
      "commands": ["npm run build"]
    }
  },
  "deploy": {
    "inputs": [
      { "step": "build", "include": [".next", "public", "package.json"] }
    ],
    "startCommand": "node .next/standalone/server.js"
  }
}
