# AIRouter Environment Variables
# Copy this file to .env and customize for your deployment

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# JWT Secret for authentication tokens
# Generate with: openssl rand -base64 32
# IMPORTANT: Change this in production!
JWT_SECRET=airouter-default-secret-change-me

# =============================================================================
# RECOMMENDED
# =============================================================================

# Environment mode (development | production)
# Set to 'production' for secure cookies and optimizations
NODE_ENV=production

# =============================================================================
# OPTIONAL
# =============================================================================

# Server port (default: 3000)
# PORT=3000

# Data directory for database storage
# Default: ~/.airouter (Linux/macOS) or %APPDATA%/airouter (Windows)
# For Docker: /app/data
# DATA_DIR=/app/data

# Hostname binding (default: localhost)
# Set to 0.0.0.0 for Docker/container deployments
# HOSTNAME=0.0.0.0
