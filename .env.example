# AIRouter Environment Variables
# Copy this file to .env and customize for your deployment

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# JWT Secret for authentication tokens
# Generate with: openssl rand -base64 32
# IMPORTANT: Change this in production!
JWT_SECRET=airouter-default-secret-change-me

# =============================================================================
# RECOMMENDED
# =============================================================================

# Environment mode (development | production)
# Set to 'production' for secure cookies and optimizations
NODE_ENV=production

# Hostname binding
# Set to 0.0.0.0 for Docker/container deployments to allow external access
HOSTNAME=0.0.0.0

# =============================================================================
# OPTIONAL
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Data directory for database storage
# Default: ~/.airouter (Linux/macOS) or %APPDATA%/airouter (Windows)
# For Docker/Dokploy: /app/data
# DATA_DIR=/app/data

# =============================================================================
# SECURITY (OPTIONAL)
# =============================================================================

# Secret for API key generation (change for additional security)
# API_KEY_SECRET=your-custom-api-key-secret

# Salt for machine ID hashing (change for additional security)
# MACHINE_ID_SALT=your-custom-salt

# =============================================================================
# FEATURES (OPTIONAL)
# =============================================================================

# Enable request logging (default: false)
# Creates log files in ./logs directory
# ENABLE_REQUEST_LOGS=true

# Cloud sync URL (for AIRouter Cloud integration)
# NEXT_PUBLIC_CLOUD_URL=https://airouter.io

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Note: The dashboard password is NOT set via environment variable.
# Default password: 123456
# Change it immediately after first login via Dashboard > Profile
